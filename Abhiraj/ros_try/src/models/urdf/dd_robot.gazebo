<?xml version='1.0'?>
<robot name="dd_robot">

<!-- Base Link -->
<link name="base_link">
	<visual>
		<origin xyz="0 0 0" rpy="0 0 0" />
		<geometry>
			<box size="0.7 0.5 0.25"/>
		</geometry>
		<material name="blue">
			<color rgba="0 0.5 1 1"/>
		</material>
	</visual>
	<collision>
		<origin xyz="0 0 0" rpy="0 0 0" />
		<geometry>
			<box size="0.7 0.5 0.25"/>
		</geometry>
	</collision>
	<inertial>
		<mass value="5"/>
		<inertia ixx="0.13" ixy="0.0" ixz="0.0" iyy="0.21" iyz="0.0" izz="0.13"/>
	</inertial>


	<!-- Caster -->
	<visual name="caster">
		<material name="black">
			<color rgba="1 1 1 1"/>
		</material>
		<origin xyz="0.2 0 -0.125" rpy="0 0 0" />
		<geometry>
			<sphere radius="0.07" />
		</geometry>
	</visual>
	<collision>
		<origin xyz="0.2 0 -0.125" rpy="0 0 0" />
		<geometry>
			<sphere radius="0.07" />
		</geometry>
	</collision>
	<inertial>
		<mass value="0.5"/>
		<inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
	</inertial>


</link>

<!-- Right Wheel -->
<link name="right_wheel">
	<visual>
		<material name="white">
			<color rgba="0 0 0 1"/>
		</material>
		<origin xyz="0 0 0" rpy="1.570795 0 0" />
		<geometry>
			<cylinder length="0.1" radius="0.2" />
		</geometry>
	</visual>
	<collision>
		<origin xyz="0 0 0" rpy="1.570795 0 0" />
		<geometry>
			<cylinder length="0.1" radius="0.2" />
		</geometry>
	</collision>
	<inertial>
		<mass value="0.5"/>
		<inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
	</inertial>

</link>
<joint name="joint_right_wheel" type="continuous">
	<parent link="base_link"/>
	<child link="right_wheel"/>
	<origin xyz="-0.2 -0.30 0" rpy="0 0 0" />
	<axis xyz="0 1 0" />
	<dynamics damping="0.7"/>
</joint>

<!-- Left Wheel -->
<link name="left_wheel">
	<visual>
	<material name="white"/>
	<origin xyz="0 0 0" rpy="1.570795 0 0" />
	<geometry>
		<cylinder length="0.1" radius="0.2" />
	</geometry>
	</visual>
	<collision>
		<origin xyz="0 0 0" rpy="1.570795 0 0" />
		<geometry>
			<cylinder length="0.1" radius="0.2" />
		</geometry>
	</collision>
	<inertial>
		<mass value="0.5"/>
		<inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
	</inertial>
</link>
<joint name="joint_left_wheel" type="continuous">
	<parent link="base_link"/>
	<child link="left_wheel"/>
	<origin xyz="-0.2 0.30 0" rpy="0 0 0" />
	<axis xyz="0 1 0" />
	<dynamics damping="0.7"/>
</joint>

<!-- Sensor link -->
<link name="sensor_mount_l">
	<visual>
		<material name="white"/>
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<geometry>
			<box size="0.05 0.05 0.05"/>
		</geometry>
	</visual>
</link>
<joint name="mount_joint_l" type="fixed">
	<parent link="base_link"/>
	<child link="sensor_mount_l"/>
	<origin xyz="0.37 0.20 0" rpy="0 0 0"/>
</joint>
	
<link name="sensor_mount_r">
	<visual>
		<material name="white"/>
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<geometry>
			<box size="0.05 0.05 0.05"/>
		</geometry>
	</visual>
</link>
<joint name="mount_joint_r" type="fixed">
	<parent link="base_link"/>
	<child link="sensor_mount_r"/>
	<origin xyz="0.37 -0.20 0" rpy="0 0 0"/>
</joint>

<!-- _______________________GAZEBO THINGS____________________ -->
<gazebo reference="base_link">
	<material>Gazebo/Blue</material>
</gazebo>
<gazebo reference="right_wheel">
	<material>Gazebo/Black</material>
</gazebo>
<gazebo reference="left_wheel">
	<material>Gazebo/Black</material>
</gazebo>


<gazebo>
  <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
    <alwaysOn>true</alwaysOn>
    <updateRate>50</updateRate>
    <leftJoint>joint_left_wheel</leftJoint>
    <rightJoint>joint_right_wheel</rightJoint>
    <wheelSeparation>0.5</wheelSeparation>
    <wheelDiameter>0.2</wheelDiameter>
    <torque>15</torque>
    <commandTopic>cmd_vel</commandTopic>
    <odometryTopic>odom</odometryTopic>
    <odometryFrame>odom</odometryFrame>
    <robotBaseFrame>base_link</robotBaseFrame>
    <robotNamespace>ddrobot</robotNamespace>
  </plugin>
</gazebo>

<gazebo reference="sensor_mount_l">
   <sensor type="ray" name="TeraRangerL">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>50</update_rate>
      <ray>
         <scan>
            <horizontal>
               <samples>10</samples>
               <resolution>1</resolution>
               <min_angle>-0.14835</min_angle>
               <max_angle>0.14835</max_angle>
            </horizontal>
            <vertical>
               <samples>10</samples>
               <resolution>1</resolution>
               <!-- <min_angle>&#45;0.14835</min_angle> -->
               <max_angle>0.14835</max_angle>
            </vertical>
         </scan>
         <range>
            <min>0.01</min>
            <max>4</max>
            <resolution>0.02</resolution>
         </range>
      </ray>
      <plugin filename="libgazebo_ros_range.so" name="gazebo_ros_range">
         <gaussianNoise>0.005</gaussianNoise>
         <alwaysOn>true</alwaysOn>
         <updateRate>50</updateRate>
         <topicName>sensor/us_front_l</topicName>
         <frameName>sensor_mount_l</frameName>
         <radiation>ULTRASOUND</radiation>
         <fov>0.2967</fov>
      </plugin>
   </sensor>
   </gazebo>


<gazebo reference="sensor_mount_r">
   <sensor type="ray" name="TeraRangerR">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>50</update_rate>
      <ray>
         <scan>
            <horizontal>
               <samples>10</samples>
               <resolution>1</resolution>
               <min_angle>-0.14835</min_angle>
               <max_angle>0.14835</max_angle>
            </horizontal>
            <vertical>
               <samples>10</samples>
               <resolution>1</resolution>
               <!-- <min_angle>&#45;0.14835</min_angle> -->
               <max_angle>0.14835</max_angle>
            </vertical>
         </scan>
         <range>
            <min>0.01</min>
            <max>4</max>
            <resolution>0.02</resolution>
         </range>
      </ray>
      <plugin filename="libgazebo_ros_range.so" name="gazebo_ros_range">
         <gaussianNoise>0.005</gaussianNoise>
         <alwaysOn>true</alwaysOn>
         <updateRate>50</updateRate>
         <topicName>sensor/us_front_r</topicName>
         <frameName>sensor_mount_r</frameName>
         <radiation>ULTRASOUND</radiation>
         <fov>0.2967</fov>
      </plugin>
   </sensor>
   </gazebo>
</robot>

